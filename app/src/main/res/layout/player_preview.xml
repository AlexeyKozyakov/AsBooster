<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_player_preview"
    android:elevation="2dp">

    <ProgressBar
        android:id="@+id/player_preview_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/button_preview_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        app:srcCompat="@drawable/icon_button_play_preview"
        android:paddingStart="20dp"/>

    <ImageButton
        android:id="@+id/button_preview_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        app:srcCompat="@drawable/ic_goto_player" />

    <ImageButton
        android:id="@+id/button_preview_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        app:srcCompat="@drawable/ic_preview_close"
        android:paddingEnd="20dp"/>


</LinearLayout>